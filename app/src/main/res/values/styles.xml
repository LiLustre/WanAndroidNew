<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <!--状态栏透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transprency</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="GoUpPopDialogAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/go_up_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/go_up_dialog_out</item>
    </style>
</resources>
